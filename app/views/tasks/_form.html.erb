<%= form_with model: @task, local: true do |form| %>
  <div class="form-group">
    <%= form.label :name, 'Name for the task' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :description, 'Detailed description of the task' %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-row">
    <div class="col">
      <%= form.label :points, 'Points to award for completion' %>
      <%= form.number_field :points, class: 'form-control' %>
    </div>
    <div class="col">
      <%= form.label :difficulty, 'Difficulty rating of this task' %>
      <%= form.number_field :difficulty, class: 'form-control' %>
    </div>
  </div>

  <br>
  <%= form.submit class: 'btn btn-primary' %>
<% end %>
