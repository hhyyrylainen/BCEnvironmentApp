<h2>Task '<%= @task.name %>' (<%= @task.id %>)</h2>

<p>
  <%= link_to 'Edit this task', edit_task_path(@task), class: 'btn btn-primary' %>
  
  <%= link_to 'DELETE this task', task_path(@task), method: :delete,
              data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Points:</strong>
  <%= @task.points %>
</p>

<p>
  <strong>Difficulty:</strong>
  <%= @task.difficulty %>
</p>
